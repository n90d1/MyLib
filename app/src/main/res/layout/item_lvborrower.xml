<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_item_list"
    android:padding="10dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvBorrowerId"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Mã số sách"
            android:background="@drawable/border_cover_title"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="10sp" />
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/iV_Borrower"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/borrower_icon"
            android:layout_gravity="center_vertical|center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/tvNameBorrower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Tên người mượn"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPhoneBo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvAdressBo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout>